<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DSV.Views"
        xmlns:controls="clr-namespace:DSV.Controls"
        xmlns:vm="using:DSV.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DSV.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="DSV">

        <!-- Icon="/Assets/avalonia-logo.ico" -->
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
        <Grid ColumnDefinitions="*, Auto">

            <Border Background="#161217"
                    CornerRadius="20"
                    ClipToBounds="True"
                    Margin="10"
                    Grid.Column="0">
                <local:CanvasView x:Name="MainCanvasView" />
        </Border>
            <ScrollViewer Background="#1F1B24"
                    CornerRadius="20"
                    ClipToBounds="True"
                    Margin="10"
                    Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Dot Spacing" HorizontalAlignment="Center" Padding="5" Margin="0,10"/>
                    <NumericUpDown Value="{Binding GridSettings.Spacing, Mode=TwoWay}" Minimum="1" Maximum="0,10"/>
                    <TextBlock Text="Dot Size" HorizontalAlignment="Center" Padding="5" Margin="0,10"/>
                    <NumericUpDown Value="{Binding GridSettings.DotSize, Mode=TwoWay}" Padding="5" Margin="0,10"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Window>
